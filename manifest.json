{
  "manifest_version": 2,
  "name": "TabGlow",
  "version": "1.0",
  "description": "Visually enhance your browsing experience by applying a unique color to the current tab.",
  "permissions": ["theme", "storage"],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tabglow@brkgng.com",
      "strict_min_version": "91.0"
    }
  }
}
